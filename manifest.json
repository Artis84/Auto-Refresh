{
    "manifest_version": 3,
    "name": "BKCE",
    "version": "1.0",
    "description": "Better kick chat experience.",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "matches": ["https://kick.com/*"]
        }
    ]
}
